{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    // "indent": [2, "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": [2, "single"],
    "no-multi-spaces": 0,
    "semi": ["error", "always"],
    "require-await": ["error"],
    "no-trailing-spaces": 0
  }
}
